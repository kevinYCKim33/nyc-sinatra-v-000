<h2>Edit your Figure!</h2>

<form action="/figures/<%=@figure.id%>" method="POST">
  <input type="hidden" name="_method" value="PATCH">

  <h3><label for="figure_name">Figure Name:</label></h3>
  <input type="text" name="figure[name]" id="figure_name" value="<%=@figure.name%>">

  <h3>Figure Title(s):</h3>
  <% Title.order('name ASC').all.each do |title| %>
    <input type="checkbox" name="figure[title_ids][]" value="<%=title.id%>" id="title_<%= title.id %>" <%='checked' if @figure.titles.include?(title)%>>
    <label><%= title.name %> </label><br>
  <% end %>
  <br>

  <label for="title_name"><i>AND/OR</i> create a new title:</label>
  <input type="text" name="title[name]" id="new_title">

  <h3>Landmark(s)</h3>
  <% Landmark.order('name ASC').all.each do |landmark| %>
    <input type="checkbox" name="figure[landmark_ids][]" value="<%=landmark.id%>" id="landmark_<%= landmark.id %>" <%='checked' if @figure.landmarks.include?(landmark)%>>
    <label><%= landmark.name %> </label><br>
  <% end %>
  <br>

  <label for="landmark_name"><i>AND/OR</i> create a new landmark:</label>
  <input type="text" name="landmark[name]" id="new_landmark">

  <br><br>

  <input type="submit" value="Edit Figure">

</form>
